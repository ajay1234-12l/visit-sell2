{
  "version": 2,
  "builds": [
    { "src": "api/app.py", "use": "@vercel/python" },
    { "src": "templates/*.html", "use": "@vercel/static" },
    { "src": "static/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "api/app.py" },
    { "src": "/login", "dest": "api/app.py" },
    { "src": "/logout", "dest": "api/app.py" },
    { "src": "/admin", "dest": "api/app.py" },
    { "src": "/api/(.*)", "dest": "api/app.py" },
    { "src": "/static/(.*)", "dest": "/static/$1" }
  ]
}